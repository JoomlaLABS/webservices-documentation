<?xml version="1.0" encoding="utf-8"?>
<extension type="module" client="administrator" method="upgrade">
    <name>MOD_JOOMLALABS_WEBSERVICES_HELPMENU</name>
    <creationDate>@date@</creationDate>
    <author>Joomla!LABS</author>
    <authorEmail>info@joomlalabs.com</authorEmail>
    <authorUrl>https://joomlalabs.com</authorUrl>
    <copyright>Copyright (C) 2015 - 2026 Joomla!LABS. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later</license>
    <version>@version@</version>
    <description>MOD_JOOMLALABS_WEBSERVICES_HELPMENU_XML_DESCRIPTION</description>

    <namespace path="src">Joomla\Module\JoomlalabsWebservicesHelpmenu</namespace>

    <scriptfile>script.php</scriptfile>

    <files>
        <folder module="mod_joomlalabs_webservices_helpmenu">services</folder>
        <folder>src</folder>
        <folder>tmpl</folder>
    </files>

    <languages>
        <language tag="en-GB">language/en-GB/mod_joomlalabs_webservices_helpmenu.ini</language>
        <language tag="en-GB">language/en-GB/mod_joomlalabs_webservices_helpmenu.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
                    name="header_icon"
                    type="text"
                    label="MOD_JOOMLALABS_WEBSERVICES_HELPMENU_HEADER_ICON_LABEL"
                    default="icon-code"
                />
            </fieldset>
            <fieldset name="advanced">
                <field
                    name="layout"
                    type="modulelayout"
                    label="JFIELD_ALT_LAYOUT_LABEL"
                    class="form-select"
                />
                <field
                    name="moduleclass_sfx"
                    type="textarea"
                    label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                    rows="3"
                />
                <field
                    name="cache"
                    type="list"
                    label="COM_MODULES_FIELD_CACHING_LABEL"
                    default="1"
                    filter="integer"
                    >
                    <option value="1">JGLOBAL_USE_GLOBAL</option>
                    <option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
                </field>
                <field
                    name="cache_time"
                    type="number"
                    label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
                    default="900"
                    filter="integer"
                />
            </fieldset>
        </fields>
    </config>
    
</extension>
